
#define csd_LED_ADDR 0x41200000
#define timerMemory 0x001019d0

.extern csd_main

.global main
main:
 	ldr r0, =csd_LED_ADDR
 	ldr r1, =timerMemory
 	mov r4, #1
 	str r4, [timerMemory]
forever:
 	bl csd_main
 	ldr r5, [r1]
	lsl r4, r4, #1
	cmp r4, #16
	bgt rotateByte

timer:
	subs r5, r5, #1
	bne timer

 	str r4, [csd_LED_ADDR]
 	b forever

rotateByte:
	mov r4, #1
	b timer

